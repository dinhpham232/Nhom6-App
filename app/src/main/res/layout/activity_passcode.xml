<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/passcode_background"
    android:orientation="vertical"
    tools:context="com.example.phamg.quanly.Passcode">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp">

            <EditText
                android:id="@+id/ed_n1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:inputType="textPassword"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center"
                android:enabled="false"
                android:background="@drawable/edittext_passcode"/>
            <EditText
                android:id="@+id/ed_n2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:inputType="textPassword"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center"
                android:enabled="false"
                android:background="@drawable/edittext_passcode"/>
            <EditText
                android:id="@+id/ed_n3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:inputType="textPassword"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center"
                android:enabled="false"
                android:background="@drawable/edittext_passcode"/>
            <EditText
                android:id="@+id/ed_n4"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:inputType="textPassword"
                android:textSize="40sp"
                android:textStyle="bold"
                android:gravity="center"
                android:enabled="false"
                android:background="@drawable/edittext_passcode"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_n1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="1"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode" />
            <Button
                android:id="@+id/btn_n2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="2"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>
            <Button
                android:id="@+id/btn_n3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="3"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_n4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="4"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>
            <Button
                android:id="@+id/btn_n5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="5"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>
            <Button
                android:id="@+id/btn_n6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="6"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <Button
                android:id="@+id/btn_n7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="7"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>
            <Button
                android:id="@+id/btn_n8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="8"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>
            <Button
                android:id="@+id/btn_n9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="9"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:weightSum="3">

            <Button
                android:id="@+id/btn_exit_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thoát"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/exitbutton_passcode"/>

            <Button
                android:id="@+id/btn_n0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:text="0"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/button_passcode"/>

            <Button
                android:id="@+id/btn_del_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:background="@drawable/exitbutton_passcode"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
