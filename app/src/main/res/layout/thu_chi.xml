<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    android:paddingLeft="50dp"
    android:paddingRight="50dp"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý thu chi"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#888077"/>
    <Button
        android:id="@+id/btn_chitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chi tiết thu chi"
        android:textColor="#e7e3db"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_thuchi_tab"/>
    <Button
        android:id="@+id/btn_tong"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng thu chi"
        android:textColor="#e7e3db"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/button_thuchi_tab"/>

</LinearLayout>